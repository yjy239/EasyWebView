<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <LinearLayout
        android:id="@+id/login_content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/mar_45"
        android:layout_marginRight="@dimen/mar_45">


        <ImageView
            android:id="@+id/socket"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="17dp"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:id="@+id/tellayout"
            android:layout_height="43dp"
            android:layout_width="match_parent"
            android:background="@drawable/login_input"
            android:layout_marginTop="@dimen/mar_45"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/login_icon1"/>

            <EditText
                android:id="@+id/telnum"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="7dp"
                android:singleLine="true"
                android:hint="@string/inputNum"/>

        </LinearLayout>

            <LinearLayout
                android:layout_height="43dp"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/tellayout"
                android:background="@drawable/login_input">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/login_icon2"/>

                <EditText
                    android:id="@+id/pwnum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="7dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="@string/inputpw"/>

            </LinearLayout>



        <Button
            android:id="@+id/login_in"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:background="@color/color_green"
            android:text="@string/login"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>